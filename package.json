{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@redbox-apis/api",
    "version": "0.0.0",
    "description": "Reimplementation of the Redbox APIs",
    "private": true,
    "scripts": {
        "build": "pnpm -r --workspace-concurrency Infinity --filter logger build && pnpm -r --workspace-concurrency Infinity --filter !logger --filter !db --filter !common build",
        "start": "pnpm -r --workspace-concurrency Infinity --filter logger build && pnpm --filter logger start && pnpm -r --workspace-concurrency Infinity --filter !logger --filter !db --filter !common --parallel start",
        "clean": "pnpm -r run clean",
        "prebuild": "pnpm -r --workspace-concurrency Infinity --filter common --filter !logger --filter !db build",
        "migrate:prod": "pnpm --filter db run migrate:prod",
        "migrate:dev": "pnpm --filter db run migrate:dev",
        "seed": "pnpm --filter db run seed"
    },
    "type": "module",
    "author": "Puyodead1",
    "engines": {
        "node": ">=20"
    },
    "license": "GPL-3.0-or-later",
    "packageManager": "pnpm@9.15.0",
    "keywords": [
        "redbox",
        "api"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Puyodead1/redbox-apis.git"
    },
    "bugs": {
        "url": "https://github.com/Puyodead1/redbox-apis/issues"
    }
}
